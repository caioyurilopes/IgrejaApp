@page "/secretaria/membros/consultar"
@layout MainLayout

@inject IMembrosService MembrosService

<div class="max-w-5xl mx-auto p-4 space-y-6 animate-slide-up">
    <div class="flex justify-between items-center">
        <h2 class="text-xl font-semibold text-white">Membros cadastrados</h2>
        <input type="text"
               placeholder="Filtrar por nome..."
               class="bg-zinc-800 text-white rounded-lg px-4 py-2 text-sm"
               @bind="FiltroNome"
               @bind:event="oninput"
        />
    </div>

    @if (_membrosFiltrados is null)
    {
        <p class="text-zinc-400">Carregando membros...</p>
    }
    else if (!_membrosFiltrados.Any())
    {
        <p class="text-zinc-400">Nenhum membro encontrado.</p>
    }
    else
    {
        <div class="space-y-4">
            @foreach (var membro in _membrosFiltrados)
            {
                <div class="bg-zinc-800 rounded-xl p-4 shadow-md flex justify-between items-center">
                    <div>
                        <p class="text-lg font-semibold text-white">@membro.NomeCompleto</p>
                        <p class="text-sm text-zinc-400">@membro.EstadoCivil.ToDisplay()</p>
                        <p class="text-sm text-zinc-400">@CelularFormatter.AplicarMascara(membro.Telefone)</p>
                    </div>
                    <button class="text-yellow-400 text-sm hover:underline"
                            @onclick="@(() => VerDetalhes(membro.Id.ToString()))">
                        Ver detalhes
                    </button>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<MembrosResponse>? _membros;
    private List<MembrosResponse>? _membrosFiltrados;
    private string _filtroNome = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        _membros = await MembrosService.GetAllAsync();
        _membrosFiltrados = _membros;
    }

    private void Filtrar()
    {
        if (string.IsNullOrWhiteSpace(_filtroNome))
        {
            _membrosFiltrados = _membros;
        }
        else
        {
            _membrosFiltrados = _membros?
                .Where(m => m.NomeCompleto.Contains(_filtroNome, StringComparison.OrdinalIgnoreCase))
                .ToList();
        }
    }

    private void VerDetalhes(string membroId)
    {
        Console.WriteLine($"Ver detalhes do membro: {membroId}");
    }

    private string FiltroNome
    {
        get => _filtroNome;
        set
        {
            _filtroNome = value;
            Filtrar();
        }
    }

}