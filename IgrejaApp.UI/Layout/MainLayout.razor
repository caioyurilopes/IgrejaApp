@inherits LayoutComponentBase
@inject NavigationManager Navigation

<div class="flex flex-col min-h-screen bg-zinc-900 text-white">
    <!-- Header -->
    <header class="sticky top-0 z-20 bg-zinc-950 shadow-md transition-all duration-300 px-4 py-3 flex items-center justify-between">
        @if (!_isHomePage)
        {
            <button class="text-white" @onclick="Voltar">
                <span class="material-icons">arrow_back</span>
            </button>
        }
        else
        {
            <div class="w-10"></div>
        }

        <div class="flex-1 flex justify-center">
            <img src="https://tailwindcss.com/plus-assets/img/logos/mark.svg?color=indigo&shade=600" alt="IBVC" class="h-10 w-auto" />
        </div>

        <div class="w-10"></div>
    </header>

    <main class="flex-1 overflow-y-auto px-4 py-2">
        @if (!_isHomePage)
        {
            <h1 class="text-xl font-semibold mb-4">@PageTitle</h1>
        }

        <div class="animate-fade-in" @key="Navigation.Uri">
            @Body
        </div>
    </main>

    <footer class="bg-zinc-950 p-2 flex justify-around items-center text-xs border-t border-zinc-800">
        <NavLink href="/home" class="flex flex-col items-center" activeClass="text-yellow-400">
            <span class="material-icons text-lg">home</span>
            Início
        </NavLink>
        <NavLink href="/configuracoes" class="flex flex-col items-center" activeClass="text-yellow-400">
            <span class="material-icons text-lg">settings</span>
            Opções
        </NavLink>
    </footer>
</div>

@code {
    private bool _isHomePage => Navigation.Uri.EndsWith("/home", StringComparison.OrdinalIgnoreCase);
    private string PageTitle => GetPageTitle();
    
    private string GetPageTitle()
    {
        var uri = Navigation.Uri.ToLowerInvariant();
        if (uri.Contains("/secretaria/membros/cadastrar")) return "Cadastrar novo membro";
        if (uri.Contains("/secretaria/membros/consultar")) return "Consultar membros";
        return "Página";
    }

    private void Voltar()
    {
        Navigation.NavigateTo("/home");
    }
}